/**pages/ycb/ycb.wxss**/

.page{
  font-family: 方正字迹-海体正楷 简;
}

/*背景图片*/
.bg{
  margin-top: -25rpx;
  position: absolute;
  width: 100%;
  height: 1600rpx;
}

.search{
  position: relative;
  width: 88%;
  padding-left: 50rpx;
}

 /*搜索图标*/
.icons{
  position: absolute;
  right: 83%;
  padding-top: 6rpx;
}

.search input{
  background:white;
  outline:none;
  text-align: left;
  padding-left: 70rpx;
  border-radius: 36rpx;
  height: 60rpx;
}

.lists{
  text-align: left;
  margin: 20rpx;
  color: #E67C19;
}

.zeroLine{
  position: absolute;
  margin-top: 100rpx;
  width: 125rpx;
  height: 160rpx;
}

.zeroLine.two{
  left: 55%;
}

.title_one{
  color:#23363D;
  position: absolute;
  margin-top: 320rpx;
  margin-left: 8%;
}

.oneLine{
  background-color: #FFFFFF;
  margin-top: 430rpx;
  margin-left: 100rpx;
  width: 130rpx;
  height: 120rpx;
  /* 圆角弧度 */
  border-radius: 30%;
  /* 阴影设置 水平 垂直偏差 模糊距离 阴影尺寸 颜色*/
  box-shadow: 5rpx 5rpx 20rpx 5rpx #b4d3db;
  position: absolute;
}


.oneLine.two{
  margin-left: 320rpx;
}

.oneLine.three{
  margin-left: 540rpx;
}

.flower{
  margin-top: 300rpx;
  margin-left: 5%;
  width: 80rpx;
  height: 80rpx;
  position: absolute;
}